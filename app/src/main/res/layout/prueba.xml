<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true">

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleTextAppearance="@android:color/transparent"
            android:fitsSystemWindows="true">

            <ImageView
                app:layout_collapseMode="parallax"
                android:src="@drawable/bg_login"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="350dp" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                android:title="Hola"
                app:layout_collapseMode="pin" />


        </android.support.design.widget.CollapsingToolbarLayout>



    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="10dp">

                    <android.support.v7.widget.CardView
                        app:cardCornerRadius="10dp"
                        android:layout_width="165dp"
                        android:layout_height="200dp"
                        card_view:cardBackgroundColor="@android:color/white"
                        card_view:cardUseCompatPadding="true"
                        card_view:cardElevation="4dp"
                        android:onClick="goLomas">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_login">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#32000000"/>

                            <com.airbnb.lottie.LottieAnimationView
                                android:id="@+id/anim_Lomas"
                                android:layout_width="125dp"
                                android:layout_height="125dp"
                                android:layout_centerHorizontal="true"
                                app:lottie_fileName="bouncy_mapmaker.json"
                                app:lottie_loop="true"
                                app:lottie_autoPlay="true"
                                android:adjustViewBounds="true"
                                android:scaleType="fitCenter"/>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_below="@id/anim_Lomas"
                                android:text="Lomas"
                                android:layout_marginTop="5dp"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="@color/white"/>
                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_marginStart="20dp"
                        android:layout_width="165dp"
                        android:layout_height="200dp"
                        app:cardCornerRadius="10dp"
                        card_view:cardBackgroundColor="@android:color/white"
                        card_view:cardUseCompatPadding="true"
                        card_view:cardElevation="4dp"
                        android:onClick="goPosts">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_login">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#32000000"/>

                            <com.airbnb.lottie.LottieAnimationView
                                android:id="@+id/anim_Feed"
                                android:layout_width="125dp"
                                android:layout_height="125dp"
                                android:layout_centerHorizontal="true"
                                app:lottie_fileName="galeria.json"
                                app:lottie_loop="true"
                                app:lottie_autoPlay="true"
                                android:adjustViewBounds="true"
                                android:scaleType="fitCenter"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_below="@id/anim_Feed"
                                android:text="Posts"
                                android:layout_marginTop="5dp"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="@color/white"/>
                        </RelativeLayout>

                    </android.support.v7.widget.CardView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="10dp">

                    <android.support.v7.widget.CardView
                        android:layout_width="165dp"
                        android:layout_height="200dp"
                        app:cardCornerRadius="10dp"
                        card_view:cardBackgroundColor="@android:color/white"
                        card_view:cardUseCompatPadding="true"
                        card_view:cardElevation="4dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_login">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#32000000"/>

                            <com.airbnb.lottie.LottieAnimationView
                                android:id="@+id/anim_Recognition"
                                android:layout_width="125dp"
                                android:layout_height="125dp"
                                android:layout_centerHorizontal="true"
                                app:lottie_fileName="face_id.json"
                                app:lottie_loop="true"
                                app:lottie_autoPlay="true"
                                android:adjustViewBounds="true"
                                android:scaleType="fitCenter"/>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_below="@id/anim_Recognition"
                                android:text="Reconocimiento"
                                android:layout_marginTop="5dp"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="@color/white"/>
                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_marginStart="20dp"
                        android:layout_width="165dp"
                        android:layout_height="200dp"
                        app:cardCornerRadius="10dp"
                        card_view:cardBackgroundColor="@android:color/white"
                        card_view:cardUseCompatPadding="true"
                        card_view:cardElevation="4dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_login">
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#32000000"/>

                            <com.airbnb.lottie.LottieAnimationView
                                android:id="@+id/anim_Social"
                                android:layout_width="125dp"
                                android:layout_height="125dp"
                                android:layout_centerHorizontal="true"
                                app:lottie_fileName="fb_icon.json"
                                app:lottie_loop="true"
                                app:lottie_autoPlay="true"
                                android:adjustViewBounds="true"
                                android:scaleType="fitCenter"/>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_below="@id/anim_Social"
                                android:text="Social"
                                android:layout_marginTop="5dp"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="@color/white"/>
                        </RelativeLayout>

                    </android.support.v7.widget.CardView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="10dp">

                    <android.support.v7.widget.CardView
                        android:layout_width="165dp"
                        android:layout_height="200dp"
                        app:cardCornerRadius="10dp"
                        card_view:cardBackgroundColor="@android:color/white"
                        card_view:cardUseCompatPadding="true"
                        card_view:cardElevation="4dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_login">
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#32000000"/>

                            <com.airbnb.lottie.LottieAnimationView
                                android:id="@+id/anim_Game"
                                android:layout_width="125dp"
                                android:layout_height="125dp"
                                android:layout_centerHorizontal="true"
                                app:lottie_fileName="lego_loader.json"
                                app:lottie_loop="true"
                                app:lottie_autoPlay="true"
                                android:adjustViewBounds="true"
                                android:scaleType="fitCenter"/>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_below="@id/anim_Game"
                                android:text="Minijuegos"
                                android:layout_marginTop="5dp"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="@color/white"/>
                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_marginStart="20dp"
                        android:layout_width="165dp"
                        android:layout_height="200dp"
                        app:cardCornerRadius="10dp"
                        card_view:cardBackgroundColor="@android:color/white"
                        card_view:cardUseCompatPadding="true"
                        card_view:cardElevation="4dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_login">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#32000000"/>

                            <com.airbnb.lottie.LottieAnimationView
                                android:id="@+id/anim_Recompensas"
                                android:layout_width="125dp"
                                android:layout_height="125dp"
                                android:layout_centerHorizontal="true"
                                app:lottie_fileName="trophy.json"
                                app:lottie_loop="true"
                                app:lottie_autoPlay="true"
                                android:adjustViewBounds="true"
                                android:scaleType="fitCenter"/>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_below="@id/anim_Recompensas"
                                android:text="Recompensas"
                                android:layout_marginTop="5dp"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="@color/white"/>
                        </RelativeLayout>

                    </android.support.v7.widget.CardView>


                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.FloatingActionButton
        android:src="@drawable/ic_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:elevation="6dp"
        app:pressedTranslationZ="12dp"
        app:layout_anchor="@id/app_bar_layout"
        app:layout_anchorGravity="bottom|right|end"
        />
</android.support.design.widget.CoordinatorLayout>