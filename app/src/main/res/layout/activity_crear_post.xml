<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/intrinsic_padding"
    tools:context=".activities.CrearPostActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true"
        android:focusable="true">

        <RelativeLayout
            android:id="@+id/image_container_crear_post"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="15dp"
            android:layout_alignParentTop="true">

            <ImageView
                android:id="@+id/imageView_photo_crear_post"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_stub"
                android:focusableInTouchMode="true"
                android:scaleType="centerCrop"
                android:focusable="true" />

            <ProgressBar
                android:id="@+id/progressBar_crear_post"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:visibility="gone" />

        </RelativeLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_title_crear_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/intrinsic_padding"
            android:layout_below="@+id/image_container_crear_post">

            <EditText
                android:id="@+id/editText_title_crear_post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_title"
                android:inputType="textMultiLine" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_description_crear_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_below="@+id/input_layout_title_crear_post">

            <EditText
                android:id="@+id/editText_descripcion_crear_post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:hint="@string/hint_description"
                android:inputType="textMultiLine" />

        </android.support.design.widget.TextInputLayout>


        <Button
            android:id="@+id/btn_crear_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/input_layout_description_crear_post"
            android:layout_marginTop="10dp"
            android:text="Publicar"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

</ScrollView>
