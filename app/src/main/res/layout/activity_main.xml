<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="235dp"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Keving Hanz Roque Huich"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:gravity="center"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:layout_marginTop="14dp"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.2">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:text="045"
                    android:textColor="@color/white"
                    android:textSize="35sp"
                    android:gravity="center"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.2">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_android_logo"/>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="20dp"
                    android:text="220"
                    android:textColor="@color/white"
                    android:textSize="35sp"
                    android:gravity="center"/>
            </RelativeLayout>

        </LinearLayout>

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:progress="50"
            android:progressTint="@color/white"
            tools:visibility="visible" />
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="10dp">

                <android.support.v7.widget.CardView
                    android:layout_width="165dp"
                    android:layout_height="200dp"
                    card_view:cardBackgroundColor="@android:color/white"
                    card_view:cardUseCompatPadding="true"
                    card_view:cardElevation="4dp"
                    android:onClick="goLomas">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/anim_Lomas"
                            android:layout_width="125dp"
                            android:layout_height="125dp"
                            android:layout_centerHorizontal="true"
                            app:lottie_fileName="bouncy_mapmaker.json"
                            app:lottie_loop="true"
                            app:lottie_autoPlay="true"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@id/anim_Lomas"
                            android:text="Lomas"
                            android:layout_marginTop="5dp"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimary"/>
                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_marginStart="20dp"
                    android:layout_width="165dp"
                    android:layout_height="200dp"
                    card_view:cardBackgroundColor="@android:color/white"
                    card_view:cardUseCompatPadding="true"
                    card_view:cardElevation="4dp"
                    android:onClick="goPosts">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/anim_Feed"
                            android:layout_width="125dp"
                            android:layout_height="125dp"
                            android:layout_centerHorizontal="true"
                            app:lottie_fileName="galeria.json"
                            app:lottie_loop="true"
                            app:lottie_autoPlay="true"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@id/anim_Feed"
                            android:text="Posts"
                            android:layout_marginTop="5dp"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimary"/>
                    </RelativeLayout>

                </android.support.v7.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="10dp">

                <android.support.v7.widget.CardView
                    android:layout_width="165dp"
                    android:layout_height="200dp"
                    card_view:cardBackgroundColor="@android:color/white"
                    card_view:cardUseCompatPadding="true"
                    card_view:cardElevation="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/anim_Recognition"
                            android:layout_width="125dp"
                            android:layout_height="125dp"
                            android:layout_centerHorizontal="true"
                            app:lottie_fileName="face_id.json"
                            app:lottie_loop="true"
                            app:lottie_autoPlay="true"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@id/anim_Recognition"
                            android:text="Reconocimiento"
                            android:layout_marginTop="5dp"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimary"/>
                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_marginStart="20dp"
                    android:layout_width="165dp"
                    android:layout_height="200dp"
                    card_view:cardBackgroundColor="@android:color/white"
                    card_view:cardUseCompatPadding="true"
                    card_view:cardElevation="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/anim_Social"
                            android:layout_width="125dp"
                            android:layout_height="125dp"
                            android:layout_centerHorizontal="true"
                            app:lottie_fileName="fb_icon.json"
                            app:lottie_loop="true"
                            app:lottie_autoPlay="true"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@id/anim_Social"
                            android:text="Social"
                            android:layout_marginTop="5dp"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimary"/>
                    </RelativeLayout>

                </android.support.v7.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="10dp">

                <android.support.v7.widget.CardView
                    android:layout_width="165dp"
                    android:layout_height="200dp"
                    card_view:cardBackgroundColor="@android:color/white"
                    card_view:cardUseCompatPadding="true"
                    card_view:cardElevation="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/anim_Game"
                            android:layout_width="125dp"
                            android:layout_height="125dp"
                            android:layout_centerHorizontal="true"
                            app:lottie_fileName="lego_loader.json"
                            app:lottie_loop="true"
                            app:lottie_autoPlay="true"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@id/anim_Game"
                            android:text="Minijuegos"
                            android:layout_marginTop="5dp"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimary"/>
                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_marginStart="20dp"
                    android:layout_width="165dp"
                    android:layout_height="200dp"
                    card_view:cardBackgroundColor="@android:color/white"
                    card_view:cardUseCompatPadding="true"
                    card_view:cardElevation="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/anim_Recompensas"
                            android:layout_width="125dp"
                            android:layout_height="125dp"
                            android:layout_centerHorizontal="true"
                            app:lottie_fileName="trophy.json"
                            app:lottie_loop="true"
                            app:lottie_autoPlay="true"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@id/anim_Recompensas"
                            android:text="Recompensas"
                            android:layout_marginTop="5dp"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimary"/>
                    </RelativeLayout>

                </android.support.v7.widget.CardView>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
