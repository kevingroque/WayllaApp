<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_marginTop="12dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:carview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lomasCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    carview:cardBackgroundColor="#FFF"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_nombre_lomas_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textSize="20sp"
            tools:text="Nombre de la Loma"/>

        <ImageView
            android:id="@+id/img_lomas_list"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginTop="8dp"
            tools:background="@drawable/ic_launcher_background"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:gravity="center">

            <TextView
                android:id="@+id/txt_distancia_lomas_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_map_marker_radius"
                tools:text="Distancia"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/txt_ubicacion_lomas_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp"
                android:drawableStart="@drawable/ic_map_marker_radius"
                tools:text="Ubicacion"
                android:textSize="18sp"/>

        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>